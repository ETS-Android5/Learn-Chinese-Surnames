<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chinesesurnames"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.chinesesurnames.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chinesesurnames.SurnameList"
            android:label="@string/title_activity_surname_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.chinesesurnames.WikiPage"
            android:label="@string/title_activity_wiki_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.chinesesurnames.WorkInfoPage"
            android:label="@string/title_activity_workinfo_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.chinesesurnames.AboutPage"
            android:label="@string/title_activity_about_page"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>